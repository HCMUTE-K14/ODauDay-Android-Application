<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gray">

  <ImageView
    android:id="@+id/image_shortlist"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/service_unavailable"/>
  <TextView
    android:id="@+id/txt_empty_shortlist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/image_shortlist"
    android:text="@string/txt_service_unvailable"
    android:textColor="@color/colorGray"
    android:layout_centerHorizontal="true"
    android:textSize="27dp"
    />
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/txt_empty_shortlist"
    android:text="@string/message_service_unavailable"
    android:textColor="@color/colorGray"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:textSize="16dp"
    />

</RelativeLayout>
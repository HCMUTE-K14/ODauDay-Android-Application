<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/hints"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:visibility="visible">
  <ImageView
    android:id="@+id/left_hint"
    android:layout_width="60dp"
    android:layout_height="50dp"
    android:layout_gravity="start|center_vertical"
    android:background="@drawable/gallery_hint_left_background"
    android:src="@drawable/ic_hint_location" />
  <ImageView
    android:id="@+id/right_hint"
    android:layout_width="60dp"
    android:layout_height="50dp"
    android:layout_gravity="end|center_vertical"
    android:background="@drawable/gallery_hint_right_background"
    android:src="@drawable/ic_hint_gallery" />
</FrameLayout>

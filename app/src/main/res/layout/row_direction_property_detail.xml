<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:background="@color/white">
  <LinearLayout
    android:id="@+id/directions_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">
    <TextView
      android:id="@+id/directions_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:paddingLeft="16dp"
      android:text="@string/txt_travel_time"
      android:textColor="@color/black"
      android:textSize="23sp" />
    <TextView
      android:id="@+id/directions_intro"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="16dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:text="@string/txt_travel_intro"
      android:textColor="#747c8a"
      android:textSize="14sp" />
    <ViewStub
      android:id="@+id/add_location_form"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout="@layout/add_location_form"
      android:visibility="invisible" />
    <Button
      android:id="@+id/action_button"
      style="@style/Widget.Button.Flat"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingRight="16dp"
      android:gravity="end|center_vertical"
      android:text="@string/txt_add_location" />
  </LinearLayout>
  <ImageButton
    android:id="@+id/menu"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="end"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:paddingRight="12dp"
    android:background="@drawable/button_flat"
    android:scaleType="fitXY"
    android:src="@drawable/ic_menu_card" />
</android.support.v7.widget.CardView>

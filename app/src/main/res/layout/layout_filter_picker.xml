<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <TextView
    android:id="@+id/txt_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textColor="#555"
    android:textSize="20sp"/>
  <ImageView
    android:id="@+id/img_arrow_up"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:contentDescription="@string/content_description_default"
    android:src="@drawable/icon_gray_up"/>
  <com.odauday.ui.view.wheelview.WheelView
    android:id="@+id/wheel_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.0"/>
  <ImageView
    android:id="@+id/img_arrow_down"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:contentDescription="@string/content_description_default"
    android:src="@drawable/icon_gray_down"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:background="@color/gray">
  <ImageView
    android:id="@+id/image_empty"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/ic_notifications_cleared" />
  <TextView
    android:id="@+id/txt_empty_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/image_empty"
    android:layout_centerHorizontal="true"
    android:text="@string/txt_empty_notification"
    android:textColor="@color/colorGray"
    android:textSize="27dp" />
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/txt_empty_notification"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:text="@string/txt_note_empty_notification"
    android:textColor="@color/colorGray"
    android:textSize="16dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
      name="user"
      type="com.odauday.model.User"/>
    <variable
      name="handler"
      type="com.odauday.ui.admin.usermanager.UserManagerAdapter"/>
  </data>
  <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="130dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:weightSum="8">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">
        <com.odauday.ui.view.CircleImageView
          android:id="@+id/avatar"
          android:layout_width="65dp"
          android:layout_height="65dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          app:loadImage="@{user.avatar}"
          android:src="@drawable/user_default"
          android:layout_centerHorizontal="true"
          />

        <LinearLayout
          android:layout_alignParentBottom="true"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_height="40dp">
          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="1">
            <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:src="@drawable/ic_phone"
              android:tint="@color/white"
              />
          </RelativeLayout>
          <View
            android:layout_width="0.5dp"
            android:background="@color/white"
            android:layout_height="match_parent"/>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:onClick="@{(view)->handler.onClickAction(view,user)}"
            android:layout_weight="1">
            <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:src="@drawable/ic_nav_bar_more"
              android:tint="@color/white"
              />
          </RelativeLayout>

        </LinearLayout>

      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_weight="2">
        <RelativeLayout
          android:id="@+id/relative_display_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:gravity="center|left">
          <ImageView
            android:id="@+id/image_display_name"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/user_default"/>
          <TextView
            android:id="@+id/txt_display_name"
            android:layout_toRightOf="@id/image_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.displayName}"
            android:textColor="@color/colorGray"
            android:textSize="14dp"
            />
        </RelativeLayout>
        <RelativeLayout
          android:id="@+id/relative_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/relative_display_name"
          android:layout_marginTop="5dp"
          android:gravity="center|left">
          <ImageView
            android:id="@+id/image_email"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:tint="@color/black"
            android:src="@drawable/ic_email"/>
          <TextView
            android:id="@+id/txt_email"
            android:layout_toRightOf="@id/image_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.email}"
            android:textColor="@color/colorGray"
            android:textSize="14dp"
            />
        </RelativeLayout>
        <RelativeLayout
          android:id="@+id/relative_phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/relative_email"
          android:layout_marginTop="5dp"
          android:gravity="center|left">
          <ImageView
            android:id="@+id/image_phone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:tint="@color/colorGray"
            android:src="@drawable/ic_phone_profile"/>
          <TextView
            android:id="@+id/txt_phone"
            android:layout_toRightOf="@id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.phone}"
            android:textColor="@color/colorGray"
            android:textSize="14dp"
            />
        </RelativeLayout>
        <RelativeLayout
          android:id="@+id/relative_coins"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/relative_phone"
          android:layout_marginTop="5dp"
          android:gravity="center|left">
          <ImageView
            android:id="@+id/image_coins"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:tint="@color/colorGray"
            android:src="@drawable/ic_coin"/>
          <TextView
            android:id="@+id/txt_coins"
            android:layout_toRightOf="@id/image_coins"
            android:layout_width="wrap_content"
            app:textDoublePrice="@{user.amount}"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="14dp"
            />
        </RelativeLayout>
          <TextView
            android:id="@+id/txt_status"
            android:layout_below="@id/relative_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:statusUser="@{user.status}"
            android:textColor="@color/green"
            android:textSize="14dp"/>
      </RelativeLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</layout>

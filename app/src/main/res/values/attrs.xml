<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="CircleImageView">
    <attr format="dimension" name="civ_border_width" />
    <attr format="color" name="civ_border_color" />
    <attr format="boolean" name="civ_border_overlay" />
    <attr format="color" name="civ_fill_color" />
    <attr format="color" name="civ_circle_background_color" />
  </declare-styleable>
  <declare-styleable name="CurrencyEditText">
    <attr format="boolean" name="allow_negative_values" />
    <attr format="integer" name="decimal_digits" />
  </declare-styleable>
  <declare-styleable name="CircleIndicator">
    <attr format="dimension" name="ci_width" />
    <attr format="dimension" name="ci_height" />
    <attr format="dimension" name="ci_margin" />
    <attr format="reference" name="ci_animator" />
    <attr format="reference" name="ci_animator_reverse" />
    <attr format="reference" name="ci_drawable" />
    <attr format="reference" name="ci_drawable_unselected" />

    <attr format="enum" name="ci_orientation">
      <enum name="horizontal" value="0" />
      <enum name="vertical" value="1" />
    </attr>

    <attr name="ci_gravity">
      <flag name="top" value="0x30" />
      <flag name="bottom" value="0x50" />
      <flag name="left" value="0x03" />
      <flag name="right" value="0x05" />
      <flag name="center_vertical" value="0x10" />
      <flag name="fill_vertical" value="0x70" />
      <flag name="center_horizontal" value="0x01" />
      <flag name="fill_horizontal" value="0x07" />
      <flag name="center" value="0x11" />
      <flag name="fill" value="0x77" />
      <flag name="clip_vertical" value="0x80" />
      <flag name="clip_horizontal" value="0x08" />
      <flag name="start" value="0x00800003" />
      <flag name="end" value="0x00800005" />
    </attr>
  </declare-styleable>
  <declare-styleable name="AspectRatioImageView">
    <attr format="integer" name="heightRatio" />
    <attr format="integer" name="widthRatio" />
    <attr format="dimension" name="scaleFactor" />
  </declare-styleable>

</resources>